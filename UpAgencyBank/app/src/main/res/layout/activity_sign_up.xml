<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"


        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/arrow" />





            <Space
                android:layout_weight="1"
                android:layout_width="10dp"
                android:layout_height="30dp" />








        </LinearLayout>


        <Space
            android:layout_weight="1"
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <ImageView
        android:id="@+id/back_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:background="@drawable/arrow3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step 1 of 4"
            android:textFontWeight="600"
            android:textSize="25sp"
            android:textColor="@color/green"/>



        <Space

            android:layout_width="8.66dp"
            android:layout_height="40dp" />

        <Space

            android:layout_width="8.66dp"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let Get To Know You"
                android:textFontWeight="600"
                android:textSize="25sp"
                android:textColor="@color/green"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Kindly input Your personal Details to Continues !"
                android:textFontWeight="400"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:text="Full Name"

            android:textFontWeight="600"
            android:textSize="15sp"/>

        <EditText
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter  Your full Name"
            android:background="@drawable/drawableobject" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:text="Email "

            android:textFontWeight="600"
            android:textSize="15sp"/>

        <EditText
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="0.00"
            android:background="@drawable/drawableobject"/>
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:text="Phone Number"

            android:textFontWeight="600"
            android:textSize="15sp"/>

        <EditText
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="0.00"
            android:background="@drawable/drawableobject"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:text="Bank Verification Number"

            android:textFontWeight="600"
            android:textSize="15sp"/>

        <EditText
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="0.00"
            android:background="@drawable/drawableobject"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:text="Agent Manager ID (Optional)"

            android:textFontWeight="600"
            android:textSize="15sp"/>

        <EditText
            android:paddingLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="0.00"
            android:background="@drawable/drawableobject"/>





        <Space

            android:layout_width="8.66dp"
            android:layout_height="60dp" />




        <ImageView
            android:id="@+id/proceed3"

            android:layout_width="343dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/next" />

        <Space

            android:layout_width="8.66dp"
            android:layout_height="40dp" />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>